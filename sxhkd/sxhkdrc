#
# bspwm hotkeys
#

alt + shift + Escape
	bspc quit

alt + w
	bspc node -c

alt + t
	bspc desktop -l next

alt + b
	bspc desktop -B

# super + {s,f}
# 	bspc node -t {floating,fullscreen}
# set the node state
super + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

alt + {grave,Tab}
	bspc {node,desktop} -f last

alt + apostrophe
	bspc node -s last

alt + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

alt + y
	bspc node -w last.manual

alt + m
	bspc node -s biggest

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {left,down,up,right}

alt + {_,shift + }c
	bspc node -f {next,prev}

alt + {comma,period}
	bspc desktop -C {backward,forward}

alt + bracket{left,right}
	bspc desktop -f {prev,next}

alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

alt + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

alt + ctrl + {1-9}
	bspc node -r 0.{1-9}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

# Change window gap
alt + {minus,equal}
  bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

#
# wm independent hotkeys
#

# alt + up
#   amixer set Master playback 5%+

# alt + down
#   amixer set Master playback 5%-

# alt + m
#   amixer set Master playback toggle

alt + Return
	termite

alt + space
  ${HOME}/.config/bspwm/dmenuwrapper
#dmenu_run -fn "Inconsolata-12:normal" -nb "#f3f3f3" -nf "#657b83" -sb "#657b83" -sf "#f3f3f3" -i -l 10

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

XF86Audio{Raise,Lower}Volume
    amixer set Master {5+,5-} unmute
