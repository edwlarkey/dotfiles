#!/usr/bin/env bash


# Check if sessions exists already
tmux has-session -t "$1" 2>/dev/null

if [[ $? -eq 0 ]]; then
  tmux attach -t "$1"
else
  case "$1" in
    org)
      # New session
      tmux new -s org -d

      # Create new windows
      tmux rename-window -t org "wiki"
      tmux new-window -t org -a -n "calendar" -c "$HOME"
      tmux new-window -t org -a -n "email" -c "$HOME"

      # Start programs
      tmux send-keys -t org:wiki 'vorg' C-m
      tmux send-keys -t org:calendar 'textcal open' C-m

      # Select my starting window
      tmux select-window -t org:wiki

      # Attach
      tmux attach -t org
      ;;
    SRE)
      ;;
    *)
      ;;
  esac
fi








