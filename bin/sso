#!/usr/bin/env perl

use LWP::UserAgent;
use strict;
use warnings;

my $ua = LWP::UserAgent->new;
$ua->agent("SSO_CLI/0.1 ");


# Create a request
my $req = HTTP::Request->new(GET => "https://dev-sso.builderdesigns.com/api/search?term=$ARGV[0]");
$req->header(Accept => 'application/json');

# Pass request to the user agent and get a response back
my $res = $ua->request($req);

# Check the outcome of the response
if ($res->is_success) {
		print $res->content;
}
else {
		print $res->status_line, "\n";
}
