bar-volume-foreground-1 = ${colors.blue}
bar-volume-foreground-2 = ${colors.aqua}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = #fb8720
bar-volume-foreground-5 = #fb5a20
bar-volume-foreground-6 = #fb2020
