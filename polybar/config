[module/bspwm]
type = internal/bspwm

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;
ws-icon-default = 
format = "<label-state>"

label-focused-background = ${colors.red}
label-empty-background = ${colors.bg2}
label-occupied-background = ${colors.aqua}

